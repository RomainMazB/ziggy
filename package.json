{
    "name": "ziggy-js",
    "version": "1.5.0",
    "description": "Use your Laravel named routes in JavaScript.",
    "keywords": [
        "laravel",
        "routes",
        "ziggy"
    ],
    "homepage": "https://github.com/tighten/ziggy",
    "bugs": "https://github.com/tighten/ziggy/issues",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Coulbourne",
            "email": "daniel@tighten.co"
        },
        {
            "name": "Jake Bathman",
            "email": "jake@tighten.co"
        },
        {
            "name": "Jacob Baker-Kretzmar",
            "email": "jacob@tighten.co"
        }
    ],
    "files": [
        "src/js",
        "dist"
    ],
    "type": "module",
    "source": "src/js/entry.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/tighten/ziggy.git"
    },
    "scripts": {
        "tsc": "tsc",
        "bundle": "esbuild src/js/entry.ts --bundle --format=esm --outfile=dist/entry.js",
        "run-tests": "NODE_OPTIONS=--experimental-vm-modules jest --verbose",
        "build": "npm run tsc && npm run bundle",
        "test": "npm run build && npm run run-tests",
        "prepublishOnly": "npm run build:npm && npm run build:npm:vue"
    },
    "dependencies": {
        "qs": "~6.9.7"
    },
    "devDependencies": {
        "@types/qs": "^6.9.7",
        "babel-preset-power-assert": "^3.0.0",
        "esbuild": "^0.16.17",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.0.3",
        "microbundle": "^0.15.1",
        "power-assert": "^1.6.1",
        "typescript": "^4.9.4"
    }
}
